TG_API_ID=
TG_API_HASH=
# Enable marking private messages and messages from group chats as read. Default - true
ENABLE_READ_MESSAGES=1
# Enable marking channel posts as read. Default - true
ENABLE_READ_CHANNELS=1

SIGNAL_REQUEST_URL=http://signal-cli:7583/api/v1/rpc
# SSE endpoint for receiving Signal messages
SIGNAL_EVENTS_URL=http://signal-cli:7583/api/v1/events
# Retention for chats that will be created in Signal
DEFAULT_GROUP_MSG_RETENTION_DAYS=7
# u:username.12 or ID
DEFAULT_GROUP_MEMBER=

# Enable resending messages from channels
ENABLE_CHANNELS=0
# Enable bidirectional messaging (Signal -> Telegram)
ENABLE_SIGNAL_TO_TELEGRAM=1
# Optional prefix to add before every Signal group name created from Telegram chats.
# Helps visually distinguish bridged groups from native Signal groups.
# Example: GROUP_NAME_PREFIX=(Telegram) will create groups like "(Telegram) My Chat"
# Leave empty or unset to use original Telegram chat names without prefix.
GROUP_NAME_PREFIX=(Telegram)
# Send all videos from Signal to Telegram as video note (round video)
SEND_VIDEO_AS_NOTE=0
